{
  "name": "webgpu-experiments",
  "version": "0.1.0",
  "dependencies": {
    "gl-matrix": "^3.2"
  },
  "devDependencies": {
    "@webgpu/types": "^0.1",
    "copyfiles": "^2.4",
    "esbuild": "^0.19",
    "typescript": "^5"
  },
  "scripts": {
    "prestart:copysrc": "copyfiles -u 1 src/**/*.html src/**/*.comp src/**/*.vert src/**/*.frag src/**/*.wgsl src/**/*.png build",
